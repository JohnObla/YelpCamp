<% layout("layouts/boilerplate") %>

<h1>Edit Campground</h1>

<form action="/campgrounds/<%=id%>?_method=PUT" method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" name="campground[title]" id="title" value="<%=title%>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" name="campground[location]" id="location" value="<%=location%>">
    </div>
    <button>Edit Campground</button>
</form>
<a href="/campgrounds/<%=id%>">Back to Campground</a>